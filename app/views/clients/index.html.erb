<% content_for :title do %>
  Clients
<% end %>

<%= breadcrumbs [['Clients']] %>
<div class="page-header">
  <h1>Clients <small>(<%= @clients.count %>)
      <% if can? :create, Client %>
        <%= link_to "Add new", new_client_path %>
      <% end %>
    </small>
  </h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Code</th>
      <th>Reference</th>
      <th>Stores</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @clients.each do |d| %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.name %></td>
          <td><%= d.description %></td>
          <td><%= d.code %></td>
          <td><%= d.reference %></td>
          <td><%= d.stores.count %></td>
          <td>
            <% if can? :update, Client %>
              <%= link_to "Edit", edit_client_path( :id => d.id ) %>
            <% end %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= will_paginate @clients, :renderer => BootstrapPagination::Rails %>