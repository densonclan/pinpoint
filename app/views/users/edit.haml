- content_for :title do
  = "Edit Permissions of #{@user.name}"
= breadcrumbs [['Users', users_path], ["Modify #{@user.name}"]]
.page-header
  %h1= "Modify #{@user.name}"
= render "shared/error_messages", :target => @user
= simple_form_for @user do |f|
  %fieldset
    = f.input :name
    = f.input :email
    = f.input :department_id, as: :select, collection: Department.ordered
    = f.input :user_type, as: :select, collection: user_type_options
    = f.input :client_id, as: :select, collection: Client.ordered
    %hr/
    .pull-right
      = f.submit "Save", :class => "btn btn-primary"
      = link_to "Cancel", users_path, :class =>"btn"
      = link_to "Delete", @user, method: :delete, confirm: 'Are you sure you want to delete this user?', class: 'btn btn-danger'
