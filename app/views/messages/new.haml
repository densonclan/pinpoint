- content_for :title do
  Send a message
%ul.breadcrumb
  %li
    = link_to "Dashboard", root_path
    %span.divider /
  %li
    = link_to "Messages", messages_path
    %span.divider /
  %li.active Send a message

.page-header
  %h1 Send a message
= render "shared/error_messages", :target => @message
= simple_form_for @message, html: {id: 'message'} do |f|
  %fieldset
    = f.input :receiver_id, label: 'Send to', collection: accessible_users, prompt: 'Select a person'
    = f.input :subject
    = f.input :full_text, as: :text
    %hr/
    .pull-right
      = f.submit "Save", class: "btn btn-primary"
      = link_to "Cancel", messages_path, class: "btn"