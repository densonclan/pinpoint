<% content_for :title do %>
  Distributors
<% end %>

<%= breadcrumbs [['Distributors']] %>
<div class="page-header">
  <h1>Distributors <small>(<%= @distributors.count %>) <% if current_user.internal? %><%= link_to "Add new", new_distributor_path %><% end %></small></h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Reference Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @distributors.blank? %>
      <tr>
        <td colspan="5">There are no distributors yet.</td>
      </tr>
    <% else %>
      <% @distributors.each do |d| %>
      <tr>
        <td><%= d.name %></td>
        <td><%= d.distributor_type %></td>
        <td><%= d.description %></td>
        <td><%= d.reference_number %></td>
        <td style="width: 12%">
          <%= link_to "Edit", edit_distributor_path( :id => d.id ) %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>