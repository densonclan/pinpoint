<% content_for :title do %>
  Search results for: <%= params[:query] %>
<% end %>

<ul class="breadcrumb">
  <li><%= link_to "Dashboard", root_path %><span class="divider">/</span></li>
  <li class="active">Search results for: <%= params[:query] %></li>
</ul>

<div class="page-header">
  <h1>Search results for: <%= params[:query] %> <small>(<%= @stores.count %>)</small>
    <%= form_tag( {:action => "search"}, :method => 'get', :class => "form-searh pull-right" ) do %>
      <%= text_field_tag :query, params[:query], { :class => "input-medium search-query", :placeholder => "e.g. account no" } %>
      <button type="submit" class="btn">Search</button>
      <button type="submit" class="btn btn-info btn-advanced">Advanced</button>
    <% end %>
  </h1>
</div>
<%= link_to 'Export', export_stores_path(params.merge({format: :xls})), class: 'btn btn-info right-btn' %>
<%= render :partial => 'advanced', :orders => @orders %>

<%= render :partial => 'table', :orders => @orders %>