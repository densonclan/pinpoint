<% content_for :title do %>
  Groups
<% end %>

<%= breadcrumbs [['Groups']] %>
<div class="page-header">
  <h1>Groups <small><%=link_to "Add New", new_department_path %></small></h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Number of users</th>
      <th class="actions-col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @departments.blank? %>
      <tr><td colspan="5">You have no departments, <%= link_to "Add one", new_department_path %></td></tr>
    <% else %>
      <% @departments.each do |d| %>
      <tr>
        <td><%= d.name %></td>
        <td><%= d.description %></td>
        <td><%= d.users.count %></td>
        <td class="actions-col"><%= link_to "Edit", edit_department_path( :id => d.id ) %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @managers, :renderer => BootstrapPagination::Rails %>