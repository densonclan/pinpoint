- content_for :title do
  Importer
= breadcrumbs [['Bargain Booze']]

.page-header
  %h1
    %span
      %i.icon-circle-arrow-down.icon-2x
    Bargain Booze

= form_tag bargain_booze_index_path, id: 'bargain_booze_export_form', multipart: true do |f|
  .row.spaced
    .span4
      %legend
        %i.icon-circle-arrow-down
